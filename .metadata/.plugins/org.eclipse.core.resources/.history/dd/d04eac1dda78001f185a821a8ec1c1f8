package aima.core.environment.eightpuzzle;

import java.util.ArrayList;
import java.util.List;

import aima.core.agent.Action;
import aima.core.agent.impl.DynamicAction;
import aima.core.util.datastructure.XYLocation;

/**
 * @author Ravi Mohan
 * @author R. Lunde
 */
public class EightPuzzleBoard {

	public static Action MOVER1C = new DynamicAction("MOVER1C");

	public static Action MOVER2C = new DynamicAction("MOVER2C");

	public static Action MOVER1M = new DynamicAction("MOVER1M");

	public static Action MOVER2M = new DynamicAction("MOVER2M");
	
	public static Action MOVER1M1C = new DynamicAction("MOVER1M1C");
	
	
	
	private int[] state;

	//
	// PUBLIC METHODS
	//

	public EightPuzzleBoard() {
		state = new int[] { 3, 3 , 1 , 0 , 0};
		
	}

	public EightPuzzleBoard(int[] state) {
		this.state = new int[state.length];
		System.arraycopy(state, 0, this.state, 0, state.length);
	}

	public EightPuzzleBoard(EightPuzzleBoard copyBoard) {
		this(copyBoard.getState());
	}

	public int[] getState() {
		return state;
	}

	public int getValueAt(int loc) {
		return state[loc];
	}

	public int getLocationOf() {
		return state[2];
	}

	public void moveMOVER1C() {
		if(getLocationOf() == 0) { 
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			setValue(1,4,canibalesDcha -1,canibalesIzqda +1, 1);
		}
		else {
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			setValue(1,4,canibalesDcha + 1,canibalesIzqda - 1, 0);
		}

	}

	public void MOVER2C() {
		if(getLocationOf() == 0) { 
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			setValue(1,4,canibalesDcha -2,canibalesIzqda +2, 1);
		}
		else {
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			setValue(1,4,canibalesDcha + 2,canibalesIzqda - 2, 0);
		}

	}

	public void MOVER1M() {
		if(getLocationOf() == 0) { 
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(0,3,canibalesDcha -1,canibalesIzqda +1, 1);
		}
		else {
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(0,3,canibalesDcha + 1,canibalesIzqda - 1, 0);
		}

	}
	
	public void MOVER2M() {
		if(getLocationOf() == 0) { 
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(0,3,misDcha -1,misIzqda +1, 1);
		}
		else {
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(0,3,misDcha + 1,misIzqda - 1, 0);
		}

	}
	
	public void MOVER1M1C() {
		if(getLocationOf() == 0) { 
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(1,4,canibalesDcha -1,canibalesIzqda +1, 1);
			setValue(0,3,misDcha -1,misIzqda +1, 1);
		}
		else {
			int canibalesDcha = getValueAt(1);
			int canibalesIzqda = getValueAt(4);
			int misDcha = getValueAt(0);
			int misIzqda = getValueAt(3);
			setValue(1,4,canibalesDcha -1,canibalesIzqda +1, 0);
			setValue(0,3,misDcha -1,misIzqda +1, 0);
		}

	}



	public List<XYLocation> getPositions() {
		ArrayList<XYLocation> retVal = new ArrayList<XYLocation>();
		for (int i = 0; i < 9; i++) {
			int absPos = getPositionOf(i);
			XYLocation loc = new XYLocation(getXCoord(absPos),
					getYCoord(absPos));
			retVal.add(loc);

		}
		return retVal;
	}

	public void setBoard(List<XYLocation> locs) {
		int count = 0;
		for (int i = 0; i < locs.size(); i++) {
			XYLocation loc = locs.get(i);
			this.setValue(loc.getXCoOrdinate(), loc.getYCoOrdinate(), count);
			count = count + 1;
		}
	}

	public boolean canMoveGap(Action where) {
		    int newMisDcha = getValueAt(0); // Número de misioneros a la derecha
		    int newCanibalesDcha = getValueAt(1); // Número de caníbales a la derecha
		    int newMisIzqda = getValueAt(3); // Número de misioneros a la izquierda
		    int newCanibalesIzqda = getValueAt(4); // Número de caníbales a la izquierda
		    int boat = getLocationOf(); // Posición del bote: 0 para derecha, 1 para izquierda


		    // Simular el movimiento según la acción
		    if (where.equals(MOVER1C)) {
		        if (boat == 0) { // El bote está en la derecha
		            newCanibalesDcha -= 1;
		            newCanibalesIzqda += 1;
		        } else { // El bote está en la izquierda
		            newCanibalesDcha += 1;
		            newCanibalesIzqda -= 1;
		        }
		    } else if (where.equals(MOVER2C)) {
		        if (boat == 0) {
		            newCanibalesDcha -= 2;
		            newCanibalesIzqda += 2;
		        } else {
		            newCanibalesDcha += 2;
		            newCanibalesIzqda -= 2;
		        }
		    } else if (where.equals(MOVER1M)) {
		        if (boat == 0) {
		            newMisDcha -= 1;
		            newMisIzqda += 1;
		        } else {
		            newMisDcha += 1;
		            newMisIzqda -= 1;
		        }
		    } else if (where.equals(MOVER2M)) {
		        if (boat == 0) {
		            newMisDcha -= 2;
		            newMisIzqda += 2;
		        } else {
		            newMisDcha += 2;
		            newMisIzqda -= 2;
		        }
		    } else if (where.equals(MOVER1M1C)) {
		        if (boat == 0) {
		            newMisDcha -= 1;
		            newMisIzqda += 1;
		            newCanibalesDcha -= 1;
		            newCanibalesIzqda += 1;
		        } else {
		            newMisDcha += 1;
		            newMisIzqda -= 1;
		            newCanibalesDcha += 1;
		            newCanibalesIzqda -= 1;
		        }
		    }

		    // Verificar que en ninguno de los dos lados haya más canibales que misioneros
		    if ((newMisDcha >= 0 && newMisDcha < newCanibalesDcha && newMisDcha > 0) ||
		        (newMisIzqda >= 0 && newMisIzqda < newCanibalesIzqda && newMisIzqda > 0)) {
		        return false; // Movimiento inválido: más canibales que misioneros en alguno de los lados
		    }

		    return true;
		}

	

	@Override
	public boolean equals(Object o) {

		if (this == o) {
			return true;
		}
		if ((o == null) || (this.getClass() != o.getClass())) {
			return false;
		}
		EightPuzzleBoard aBoard = (EightPuzzleBoard) o;

		for (int i = 0; i < 8; i++) {
			if (this.getPositionOf(i) != aBoard.getPositionOf(i)) {
				return false;
			}
		}
		return true;
	}

	@Override
	public int hashCode() {
		int result = 17;
		for (int i = 0; i < 8; i++) {
			int position = this.getPositionOf(i);
			result = 37 * result + position;
		}
		return result;
	}

	@Override
	public String toString() {
		String retVal = state[0] + " " + state[1] + " " + state[2] + "\n"
				+ state[3] + " " + state[4] + " " + state[5] + " " + "\n"
				+ state[6] + " " + state[7] + " " + state[8];
		return retVal;
	}

	//
	// PRIVATE METHODS
	//

	/**
	 * Note: The graphic representation maps x values on row numbers (x-axis in
	 * vertical direction).
	 */
	private int getXCoord(int absPos) {
		return absPos / 3;
	}

	/**
	 * Note: The graphic representation maps y values on column numbers (y-axis
	 * in horizontal direction).
	 */
	private int getYCoord(int absPos) {
		return absPos % 3;
	}

	private int getAbsPosition(int x, int y) {
		return x * 3 + y;
	}

	private int getValueAt(int x, int y) {
		// refactor this use either case or a div/mod soln
		return state[getAbsPosition(x, y)];
	}

	private int getGapPosition() {
		return getPositionOf(0);
	}

	private int getPositionOf(int val) {
		int retVal = -1;
		for (int i = 0; i < 9; i++) {
			if (state[i] == val) {
				retVal = i;
			}
		}
		return retVal;
	}

	private void setValue(int pos1, int pos2, int cant1, int cant2, int loc) {
		state[pos1] = cant1;
		state[pos2] = cant2;
		state[2] = loc;

	}
}